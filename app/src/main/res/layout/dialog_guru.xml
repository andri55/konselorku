<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_cancel_guru"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_pink_circle"
        android:clickable="true"
        android:cropToPadding="false"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dialog_guru"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/nama_dialog_guru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_regular"
            android:maxLines="1"
            android:text="@string/lorem_ipsum"
            android:textAlignment="center"
            android:textColor="@color/txtPrimary"
            android:textSize="@dimen/txt_large" />

        <TextView
            android:id="@+id/sekolah_dialog_guru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_light"
            android:maxLines="1"
            android:text="@string/lorem_ipsum"
            android:textAlignment="center"
            android:textColor="@color/txtSecondary"
            android:textSize="@dimen/txt_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/phone_dialog_guru"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@drawable/btn_blue_circle"
                android:clickable="true"
                app:srcCompat="@drawable/ic_phone" />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/mail_dialog_guru"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@drawable/btn_blue_circle"
                android:clickable="true"
                app:srcCompat="@drawable/ic_mail" />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/share_dialog_guru"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@drawable/btn_blue_circle"
                android:clickable="true"
                app:srcCompat="@drawable/ic_share2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>