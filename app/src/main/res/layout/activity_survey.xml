<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SurveyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_logotype" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:adjustViewBounds="false"
            android:background="@drawable/anim_ripple_black"
            android:clickable="true"
            android:cropToPadding="false"
            android:focusable="true"
            android:onClick="back"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_pro_regular"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/txtPrimary"
            android:textSize="@dimen/txt_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_light"
            android:text="@string/desc_survey"
            android:textAlignment="center"
            android:textColor="@color/txtSecondary"
            android:textSize="@dimen/txt_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/sf_pro_regular"
            android:text="Berikan Feedback Anda"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/txtPrimary"
            android:textSize="@dimen/txt_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:fontFamily="@font/sf_pro_regular"
                android:onClick="betaTester"
                android:text="Beta Tester"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_normal" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:fontFamily="@font/sf_pro_regular"
                android:onClick="pelajar"
                android:text="Pelajar"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_normal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>